extends ../../core/layout.pug

block content

	include ../../../mixins/horizontal-form.pug

	h1 New product - step 1

	+form(`${url}/admin/catalog/products/create`)
		+select-field('type', 'Type', {
			'simple': 'Simple',
			'super': 'Super'
		})
		+select-field('attributeSetId', 'Attribute Set', attributeSets)
		.form-group
			.col-sm-10.col-sm-offset-2
				button.btn.btn-primary(type='button' data-action='submit') Continue

block scripts
	script.
		jQuery(document).ready($ => {
			$('button[data-action="submit"]').on('click', e => {
				var url = `${$('form').prop('action')}/${$('#type').val()}/${$('#attributeSetId').val()}`;
				window.location.href = url;
			});
		});